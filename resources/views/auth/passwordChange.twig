{% extends 'templates/app.twig' %}


{% block additionalCSS %}{% endblock %}


{% block title %}Password Change{% endblock %}

{% block contents %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Change Password</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.password.change') }}" method="post" autocomplete="on" id="frm">
                        <div class="form-group has-feedback{{ validationErrors.old_Password ? ' has-error' : '' }}">
                            <label for="old_Password">Current Password:</label>
                            <input type="password" name="old_Password" id="old_Password" class="form-control">
                            {% if validationErrors.old_Password %}
                                <span class="help-block">{{ validationErrors.old_Password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group has-feedback{{ validationErrors.new_Password ? ' has-error' : '' }}">
                            <label for="new_Password">New Password:</label>
                            <input type="password" name="new_Password" id="new_Password" class="form-control" value="{{ oldInput.new_Password ? oldInput.new_Password : '' }}">
                            {% if validationErrors.new_Password %}
                                <span class="help-block">{{ validationErrors.new_Password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group has-feedback{{ validationErrors.confirm_Password ? ' has-error' : '' }}">
                            <label for="confirm_Password">Confirm Password:</label>
                            <input type="password" name="confirm_Password" id="confirm_Password" class="form-control" value="{{ oldInput.confirm_Password ? oldInput.confirm_Password : '' }}">
                            {% if validationErrors.confirm_Password %}
                                <span class="help-block">{{ validationErrors.confirm_Password | first }}</span>
                            {% endif %}
                        </div>

                        {{ csrf.field | raw }}
                        <input type="submit" value="Change Password" class="form-control btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block additionalJS %}
<script src="{{ base_url() }}/js/shiblie.js" type="text/javascript"></script>
{% endblock %}