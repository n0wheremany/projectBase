{% extends 'templates/app.twig' %}


{% block additionalCSS %}{% endblock %}


{% block title %}Sign In{% endblock %}

{% block contents %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign In</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.SignIn') }}" method="post" autocomplete="on">
                        <div class="form-group has-feedback{{ validationErrors.email ? ' has-error' : '' }}">
                            <label for="email">Email:</label>
                            <input type="text" name="email" id="email" class="form-control" value="{{ oldInput.email ? oldInput.email : '' }}" title="user@domain.com">
                            {% if validationErrors.email %}
                                <span class="help-block">{{ validationErrors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group has-feedback{{ validationErrors.password ? ' has-error' : '' }}">
                            <label for="password">Password:</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if validationErrors.password %}
                                <span class="help-block">{{ validationErrors.password | first }}</span>
                            {% endif %}
                        </div>

                        {{ csrf.field | raw }}
                        <input type="submit" value="Sign In" class="form-control btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block additionalJS %}{% endblock %}