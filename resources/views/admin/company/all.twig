{% extends 'templates/app.twig' %}

{% block additionalCSS %}
{% endblock %}
{% block additionalJS %}
    <script src="{{ base_url() }}/js/shiblie.js" type="text/javascript"></script>
{% endblock %}



{% block title %}Admin - All Users{% endblock %}

{% block contents %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            All Users
            <small>All users are listed below</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path_for('home') }}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">All Users</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Application Users</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>USER ID</th>
                                <th>FULL NAME</th>
                                <th>COMPANY</th>
                                <th>EMAIL</th>
                                <th>PHONE</th>
                                <th>ACTIVE</th>
                                <th>ACCESS</th>
                                <th class="warning">RESET PASSWORD</th>
                                <th class="danger">DELETE</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for user in auth.Users %}
                                    <tr>
                                        <td><a href="{{ path_for('user.id', {'user_id':user.id}) }}">{{ user.id }}</a></td>
                                        <td>{{ user.fullName() }}</td>
                                        <td><a href="{{ path_for('portal.id', {'portal_id':user.company_id}) }}" class="btn" type="button">{{ user.companyShort() | raw }}</a></td>
                                        <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                                        <td><a href="tel:{{ user.phone }}">{{ user.phone }}</a></td>
                                        <td>{% if user.active == 1 %}Active{% else %}Inactive{% endif %}</td>
                                        <td>ACCESS CONTROL</td>
                                        <td class="warning">password reset</td>
                                        <td class="danger">X</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>USER ID</th>
                                    <th>FULL NAME</th>
                                    <th>COMPANY</th>
                                    <th>EMAIL</th>
                                    <th>PHONE</th>
                                    <th>ACTIVE</th>
                                    <th>ACCESS</th>
                                    <th class="warning">RESET PASSWORD</th>
                                    <th class="danger">DELETE</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
{% endblock %}

