{% spaceless %}

    {% include 'templates/partials/header.twig' %}
    <title>{% block title %}{% endblock %} | Bshara</title>
    {% block additionalCSS %}
        <link rel="stylesheet" href="{{ base_url() }}/css/shiblie.css">
    {% endblock %}
    </head>

<body
        class="
        hold-transition
        {#fixed#}
        skin-blue
        {% if auth.check %}
            sidebar-mini sidebar-collapse
        {% else %}
            sidebar-collapse
        {% endif %}"
>
<!-- Site wrapper -->
<div class="wrapper">
    <header class="main-header">
        <!-- Logo -->
            <!-- mini logo for sidebar mini 50x50 pixels -->
            {% if auth.check %}
                <!-- Logo -->
                <a href="{{ auth.user.Company().logo }}" class="logo">
                    <span class="logo-mini">{{ auth.user.companyShort() | raw }}</span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg">{{ auth.user.companyLong() | raw }}</span>
                </a>
            {% else %}
                <!-- Logo -->
                <a href="https://bshara.com/" class="logo">
                    <span class="logo-mini"><b>B</b>SH</span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg"><b>BSHARA</b>APP</span>
                </a>
            {% endif %}
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            {% include 'templates/partials/topnav.twig' %}
        </nav>
    </header>
    {% include 'templates/partials/leftnav.twig' %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        {% include 'templates/partials/flash.twig' %}


        {% block contents %}{% endblock %}

    </div>
{% include 'templates/partials/footer.twig' %}
{% block additionalJS %}
    <script src="{{ base_url() }}/js/shiblie.js"></script>
{% endblock %}
</body>
</html>
{% endspaceless %}